generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Board {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  name    String   
  slug    String    @unique
  tasks   Task[]
  columns Column[]
}

model Column {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  slug    String
  color   String
  board   Board  @relation(fields: [boardId], references: [id])
  boardId String @db.ObjectId
  tasks   Task[]
}

model Task {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String
  description String?
  order       Int
  column      Column    @relation(fields: [columnId], references: [id])
  columnId    String    @db.ObjectId
  board       Board     @relation(fields: [boardId], references: [id])
  boardId     String    @db.ObjectId
  subtasks    Subtask[]
}

type Subtask {
  title       String
  isCompleted Boolean
}